<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Home",root_path], 
      'Cultivation Batches', 
      'Locations & Tasks' 
  %>
<% end %>
  <% inactive_tab = "link bt-l bb-l br-l pv3 ph4 b--black-10 f6 fw6 gray hover-dark-gray hover-bg-light-gray bg-white"%>
  <% active_tab = "link bb-r br-r bt-l br-l pv3 ph4 b--black-10 f6 fw6 dark-gray hover-bg-light-gray bg-white"%>
  <div class="pa4">
      <div class="fl w-100 flex flex-column">
        <div class="flex flex-column justify-between bg-white box--shadow">
          <div class="pa4">
            <div class="fl w-100 flex flex-column">
              <div class=" flex">
                <div class="w-40">
                  <h4 class="tl pa0 ma0 h6--font dark-grey">
                    Batch <%= @batch_attributes[:batch_no]%>
                  </h4>
                </div>
              </div>
              <div class="mb3 flex">
                <div class="w-30">
                  <hr />
                  <div class=" flex">
                    <div class="w-40">
                      <label>Batch Source</label>
                    </div>
                    <div class="w-40">
                      <div class="">
                        <label><%= @batch_attributes[:batch_source] %></label>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <div class=" flex">
                    <div class="w-40">
                      <label>Batch Name</label>
                    </div>
                    <div class="w-40">
                      <div class="">
                        <label><%= @batch_attributes[:name] %></label>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <div class=" flex">
                    <div class="w-40">
                      <label>Strain</label>
                    </div>
                    <div class="w-40">
                      <div class="">
                        <label><%= @batch_attributes[:strain] %></label>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <div class=" flex">
                    <div class="w-40">
                      <label>Grow Method</label>
                    </div>
                    <div class="w-40">
                      <div class="">
                        <label><%= @batch_attributes[:grow_method]%></label>
                      </div>
                    </div>
                  </div>
                  <hr />
                </div>

                <div class="w-30 ml5">
                  <hr />
                  <div class=" flex">
                    <div class="w-50">
                      <label>Start Date </label>
                    </div>
                    <div class="w-50">
                      <div class="">
                        <label><%= @batch_attributes[:start_date] %></label>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <div class=" flex">
                    <div class="w-50">
                      <label>Total Estimation Cost</label>
                    </div>
                    <div class="w-50">
                      <div class="">
                        <label><%= @batch_attributes[:total_estimated_cost] %></label>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <div class=" flex">
                    <div class="w-50">
                      <label>Total Estimation Hours</label>
                    </div>
                    <div class="w-50">
                      <div class="">
                        <label>???</label>
                      </div>
                    </div>
                  </div>
                  <hr />
                </div>

                <div class="w-30 ml5">
                  <hr />
                  <div class=" flex">
                    <div class="w-50">
                      <label>Estimated Harvest Dat </label>
                    </div>
                    <div class="w-50">
                      <div class="">
                        <label><%= @batch_attributes[:start_date] %></label>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <div class=" flex">
                    <div class="w-50">
                      <label>Total Actual Cost</label>
                    </div>
                    <div class="w-50">
                      <div class="">
                        <label>???</label>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <div class=" flex">
                    <div class="w-50">
                      <label>Total Actual Hour</label>
                    </div>
                    <div class="w-50">
                      <div class="">
                        <label>???</label>
                      </div>
                    </div>
                  </div>
                  <hr />
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="flex mt4">
          <a
            href="/cultivation/batches/<%= @batch_attributes[:id]%>"
            class="<%= inactive_tab%>"
          >
            Tasks List
          </a>

          <a
            href="/cultivation/batches/<%= @batch_attributes[:id]%>/gantt"
            class="<%= inactive_tab%>"
          >
            Gantt Chart
          </a>
          <a
            href="/cultivation/batches/<%= @batch_attributes[:id]%>/locations"
            class="<%= inactive_tab%>"
          >
            Location
          </a>

          <a
            href="/cultivation/batches/<%= @batch_attributes[:id]%>/issues"
            class="<%= inactive_tab%>"
          >
            Issues
          </a>

          <a
            href="/cultivation/batches/<%= @batch_attributes[:id]%>/secret_sauce"
            class="<%= inactive_tab%>"
          >
            Secret Sauce
          </a>

          <a
            href="/cultivation/batches/<%= @batch_attributes[:id]%>/resource"
            class="<%= inactive_tab%>"
          >
            Resource
          </a>
          <a
            href="/cultivation/batches/<%= @batch_attributes[:id]%>/material"
            class="<%= active_tab%>"
          >
            Material
          </a>
        </div>
        <div class="flex flex-column justify-between bg-white box--shadow">
          <div class="pa4">
            <div class="fl w-100 flex flex-column">
              <table class="collapse ba b--light-grey box--br3 pv2 ph3 f6 mt1 w-60">
                <tbody>
                  <tr class="striped--light-gray">
                    <th class="pv2 ph3 subtitle-2 dark-grey tl ttu">Material</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tl ttu">Quantity Required</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tl ttu">Quantity In Inventory</th>
                  </tr>
                  <% @batch_attributes[:materials].each do |material| %>
                    <tr class="striped--light-gray dim pointer">
                      <td class="tl pv2 ph3 w5"><%= material.name %></td>
                      <td class="tl pv2 ph3"><%= material.quantity%> <%= material.uom%></td>
                      <td class="tl pv2 ph3"></td>
                    </tr>
                  <% end%>
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>
  </div>
