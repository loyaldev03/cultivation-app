<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Home",root_path], 
      'Cultivation Batches', 
      'Locations & Tasks' 
  %>
<% end %>

<% if params[:select_location].present? %>
  <%= react_component 'cultivation/batches_setup/BatchLocationApp',
    {
      batchInfo: @batch_info,
      locations: @locations
    }
  %>
<% else %>
  <%= react_component 'cultivation/tasks_setup/TaskSetup', { batch_id: @batch.id.to_s, batch: @batch_attributes}, { class: "flex flex-column h-100" } %>
<% end %>
