<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Home",root_path], 
      'Cultivation Batches', 
      'Locations & Tasks' 
  %>
<% end %>

<div class="pa4">
  <div class="flex flex-column justify-between bg-white box--shadow">
    <div class="pa4 min-h-600">
      <% if params[:step].present? %>
        <%= react_component 'cultivation/batches_setup/BatchLocationApp',
          {
            batchId: @batch.id.to_s,
            batchSource: @batch.batch_source,
            plantType: @plant_selection_type,
            locations: @locations
          } %>

        <p>
          <%= link_to 'Skip this (temp)', cultivation_batch_path(params[:id]), class: 'link' %>
        </p>
      <% else %>
        <div class="fl w-100 flex flex-column">
          <%= react_component 'cultivation/tasks_setup/TaskSetup', { batch_id: @batch.id.to_s, batch: @batch_attributes} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
