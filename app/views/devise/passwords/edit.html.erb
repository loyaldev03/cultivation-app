<div class=="">
  <span class="h5--font darkgrey ttc tc db">Forgot your password?</span>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
      html: { 
        method: :put,
        class: "bg-white flex flex-column justify-center items-center"
       }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="w5">
      <div class="field mt4">
        <%= f.label :password, "New password", class: "subtitle-2 dark-grey db mb1 ttc" %>
        
        <%= f.password_field :password, autofocus: true, autocomplete: "off",
            class: "grey subtitle-2-regular pa2 ba b--light-grey box--br3 w-100 outline-0" %>
        
        <% if @minimum_password_length %>
          <em class="caption grey mt1">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="field mt2">
        <%= f.label :password_confirmation, "Confirm new password", 
            class: "subtitle-2 dark-grey db mb1 ttc" %>

        <%= f.password_field :password_confirmation, autocomplete: "off",
            class: "grey subtitle-2-regular pa2 ba b--light-grey box--br3 w-100 outline-0" %>
      </div>

      <div class="actions mv4">
        <%= f.submit "Change my password", 
            class: "ttu button--font white link dim bg-orange bn box--br3 ph2 pv3 dib w-100 pointer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>