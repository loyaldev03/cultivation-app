<div class="">
  <span class="h5--font darkgrey">Forgot your password?</span>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
      html: { 
        method: :post,
        class: "bg-white flex flex-column justify-center items-center"
      }) do |f| %>

    <%= devise_error_messages! %>

    <div class="field mt4 tl w-100">
      <%= f.label :email, class: "subtitle-2 dark-grey db mb1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "grey subtitle-2-regular pa2 ba b--light-grey box--br3 w-100 outline-0"
      %>
    </div>

    <div class="actions mt3 mb4">
      <%= f.submit "Send me reset password instructions",
          class: "button--font white link dim bg-orange bn box--br3 ph2 pv3 dib w-100 pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
