<div class="flex flex-row items-center pointer dim pv4 w-50-l w-80 pl4-l pl0">
  <i class="material-icons md-light-gray">keyboard_arrow_left</i>
  <%= link_to "Back", :back, class: "db ttu link button--font light-grey" %>
</div>

<span class="h5--font darkgrey ttc tc db">Edit <%= resource_name.to_s.humanize %></span>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
    html: { 
      method: :put,
      class: "bg-white flex flex-column justify-center items-center"
    }) do |f| %>

  <%= devise_error_messages! %>

  <div class="w5">
    <div class="field mt4">
      <%= f.label :first_name, class: "subtitle-2 dark-grey db mb1 ttc" %>
      <%= f.text_field :first_name, autofocus: false,
          class: "grey subtitle-2-regular pa2 ba b--light-grey box--br3 w-100 outline-0" %>
    </div>

    <div class="field mv2">
      <%= f.label :last_name, class: "subtitle-2 dark-grey db mb1 ttc" %>
      <%= f.text_field :last_name, autofocus: false,
          class: "grey subtitle-2-regular pa2 ba b--light-grey box--br3 w-100 outline-0" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "subtitle-2 dark-grey db mb1 ttc" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "grey subtitle-2-regular pa2 ba b--light-grey box--br3 w-100 outline-0" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="dark-grey subtitle-2 db pv2">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

     <div class="field mv2">
      <%= f.label :current_password, class: "subtitle-2 dark-grey db mb1 ttc" %> 
      <%= f.password_field :current_password, autocomplete: "off",
          class: "grey subtitle-2-regular pa2 ba b--light-grey box--br3 w-100 outline-0" %>
      
      <i class="caption grey mt1">
        (we need your current password to confirm your changes)
      </i>
    </div>

    <div class="field">
      <%= f.label :password, class: "subtitle-2 dark-grey db mb1 ttc" %>
      <%= f.password_field :password, autocomplete: "off",
          class: "grey subtitle-2-regular pa2 ba b--light-grey box--br3 w-100 outline-0" %>
      
      <% if @minimum_password_length %>
        <em class="caption grey mt1">
          <%= @minimum_password_length %> characters minimum
        </em>
      <% end %>
      <br />
      <i class="caption grey mt1">(leave blank if you don't want to change it)</i>
    </div>

    <div class="field mt2">
      <%= f.label :password_confirmation, class: "subtitle-2 dark-grey db mb1 ttc" %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
          class: "grey subtitle-2-regular pa2 ba b--light-grey box--br3 w-100 outline-0" %>
    </div>

    <div class="actions mv4">
      <%= f.submit "Update",
          class: "ttu button--font white link dim bg-orange bn box--br3 ph2 pv3 dib w-100 pointer" %>
    </div>
  <% end %>
</div>

<div class="mb5 mt4 tc">
  <span class="h5--font darkgrey ttc tc db">Cancel my account</span>
  <p class="body-1 grey">
    Are you sure you want to cancel your account?<br/>
    Please noted that this action cannot be undone.
  </p>

  <%= button_to "Cancel my account", registration_path(resource_name), 
      data: { confirm: "Are you sure?" }, method: :delete,
      class: "ttu bg-white button--font orange link bn dim pa2 dib w-100 pointer" %>
</div>