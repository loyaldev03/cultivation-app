<div class="ph4 pv3 bb b--light-gray">
  <h5 class="h6--font dark-grey ma0"><%= room.name %> Setup</h5>
</div>

<div class="db ph4 pv3 measure">
  <%= form_with scope: :room_info, url: facility_setup_update_room_info_path do |f| %>
    <%= f.hidden_field :id, value: room.id %>
    <%= f.hidden_field :facility_id, value: room.facility_id %>
    
    <div class="mb3">
      <%= f.label "Room Name", class:"subtitle-2 grey db mb1 ttc" %>
      <%= f.text_field :name, value: room.name, class: "db w-70 pa2 f6 grey subtitle-2 grey ba b--black-20 br2 outline-0" %>
    </div>

    <div class="mb3">
      <span class="subtitle-2 db mb1 grey ttc">Room ID</span>
      <%= f.text_field :code, value: room.code, class: "db w-30 pa2 f6 grey ba b--black-20 br2 outline-0" %>
    </div>

    <div class="mb3">
      <%= f.label "Description", class:"subtitle-2 db mb1 grey ttc" %>
      <%= f.text_area :desc, value: room.desc, class: "db w-90 pa2 f6 grey ba b--black-20 br2 outline-0" %>
    </div>

    <div class="mb3">
      <%= f.label "Purpose of Room", class:"subtitle-2 db mb1 grey ttc" %>
      <%= f.select :purpose,
        options_for_select(
          Constants::ROOM_PURPOSE.collect {|p| [ p[:name], p[:code]]}, room.purpose)
      %> 
    </div>

    <div class="w-100 pt3">
      <span class="subtitle-2 grey"> Is the room split into one or more sections? </span>
      <p class="grey f6 lh-copy mt1 w-90">
        Quick tip: Will you be using this room for multiple growth stages of your plants? 
        If you are, please split the room into sections.
      </p>


      <div class="flex justify-end w-90">
        <%= f.check_box :has_sections, checked: room.has_sections, class: "toggle toggle-default" %>
        <label class="toggle-button" for="room_info_has_sections"></label>
      </div>
    </div>

    <div class="w-100 pa4 bt b--black-10 absolute right-0 bottom-0 flex items-center justify-between">
      <%= f.submit "Save Changes", class: "db pv2 bn ttu button orange link dim pointer" %>
      <%= link_to "Next > Setup Row", facility_setup_room_summary_path(facility_id: room.facility_id, room_id: room.id), 
          class: "db tr pv2 ph3 bg-orange white bn br3--box ttu link dim pointer" %>
    </div>
  <% end %>
</div>
