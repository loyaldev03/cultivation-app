<% content_for :breadcrumb do %>
  <div class="flex items-center">
    <%= breadcrumbs ["Home",root_path], 
        ["Facility Setup", facility_setup_new_path(facility_id: @rooms_info_form.facility_id)], 
        "Facility Configuration" 
    %>
  </div>
<% end %>

<div class="pa4">
  <div class="flex flex-column justify-between bg-white box--shadow">
    <div class="pa4 min-h-600">
      <div class="flex flex-column width-100">
        <div class="flex justify-between">
          <div>
            <h5 class="tl pa0 ma0 h5--font dark-grey">Facility Configuration</h5>
            <p class="mt2 body-1 grey">
              Now that we have the basic info done, letâ€™s configure your facility.
            </p>
          </div>
          <div class="dim flex flex-row items-center pointer">
            <i class="material-icons md-gray">keyboard_arrow_left</i>
            <%= link_to "Back to facility", facility_setup_new_path(facility_id: @rooms_info_form.facility_id), class: "db tr ttu link button--font grey" %>
          </div>
        </div>
        
        <div id="rooms_grid" class="pv4 carousel-wrapper">
          <%= render partial: 'rooms_list',
            locals: {facility_id: @rooms_info_form.facility_id, rooms: @rooms_info_form.rooms}
          %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "slide_panel" %>

<% content_for :before_body_end do %>
  <script>
    document.addEventListener("turbolinks:load", function() {
      bindCarousel();
    })
  </script>
<% end %>
