<% content_for :breadcrumb do %>
  <div class="flex items-center">
    <%= breadcrumbs ["Home",root_path], 
        ["Facility Setup", facility_setup_new_path], 
        "Room Setup" 
    %>
  </div>
<% end %>

<div class="pa4">
  <div class="flex flex-column justify-between bg-white box-shadow">
    <div class="pa4" style="min-height: 100vh;">
      <div class="fl w-70 flex flex-column">
        <h5 class="tl pa0 ma0 h5--font dark-grey">Room Setup</h5>
        <p class="mt2 body-1 grey">
          Awesome, you've just setup your facility! Room details are next...
        </p>
        <div id="rooms_grid" class="pv4 carousel-wrapper">
          <%= render partial: 'rooms_list',
            locals: {facility_id: @rooms_info_form.facility_id, rooms: @rooms_info_form.rooms}
          %>
        </div>
      </div>
      <div class="ph5 fl w-30 flex justify-end">
        <%= render "layouts/timeline" %>
      </div>
    </div>
    <%= render "form_buttons" %>
  </div>
</div>

<%= render "slide_panel" %>

<% content_for :before_body_end do %>
  <script>
    document.addEventListener("turbolinks:load", function() {
      bindCarousel();
    })
  </script>
<% end %>
