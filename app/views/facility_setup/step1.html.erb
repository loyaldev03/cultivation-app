<% content_for :breadcrumb do %>
  <div class="flex items-center">
    <%= breadcrumbs ["Home",root_path], "Facility Setup" %>
  </div>

  <div class="flex flex-row items-center">
    <i class="material-icons gray f6 mr3 dim">notifications</i>

    <img
      src="http://tachyons.io/img/logo.jpg"
      class="br-100 h2 w2 mr3 dib" alt="avatar">

    <span class="ttc subtitle-2">User Name</span>

    <i class="material-icons dim f6 gray ml2">keyboard_arrow_down</i>
  </div>
<% end %>

<div class="pa4">
  <div class="flex flex-column justify-between bg-white">
    <div class="pa4 vh-100">
      <div class="fl w-70 flex flex-column">
        <h5 class="tl pa0 ma0 h5--font dark-gray">Tell us about your facility.</h5>
        <p class="mt2 body-1">
          Let's get a few fetails of your facility to get things rolling...
        </p>

        <%= form_with scope: :facility,
          url: facility_setup_update_basic_info_path(facility_id: @wizard_form.id),
          html: {id: "wizard-form"},
          local: true do |f| %>
          <% if @wizard_form.errors.any? %>
            <div id="error_explanation" class="red">
              <h3><%= pluralize(@wizard_form.errors.count, "error") %> prohibited this facility from being saved:</h2>

              <ul>
              <% @wizard_form.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="flex flex-column mt3">
            <div class="mv4 flex flex-row">
              <div class="w-20">
                <span class="subtitle-2">Facility Details</span>
              </div>

              <div class="fl w-80 flex-column">
                <div class="flex flex-row mb3">
                  <div class="w-50 mr4">
                    <%= f.label "Company name", class: "db mb1 subtitle-2 ttc" %>
                    <%= f.text_field :company_name,
                      placeholder: "Company's name",
                      value: @wizard_form.company_name,
                      class: "gray ba b--black-20 br2 outline-0 pa2 db w-100" %>
                  </div>

                  <div class="w-20">
                    <%= f.label "State License #", class: "db mb1 subtitle-2 ttc" %>
                    <%= f.text_field :state_license,
                      placeholder: "S0001",
                      value: @wizard_form.state_license,
                      class: "gray input-reset br2 outline-0 ba b--black-20 pa2 db w-100" %>
                  </div>
                </div>

                <div class="flex flex-row">
                  <div class="mr4 w-50">
                    <%= f.label "Facility name", class: "subtitle-2 ttc db mb1" %>
                    <%= f.text_field :name,
                      placeholder: "Facility's name",
                      value: @wizard_form.name,
                      class: "gray ba b--black-20 br2 outline-0 pa2 db w-100" %>
                  </div>

                  <div class="w-20">
                    <%= f.label "Facility ID", class: "subtitle-2 ttc db mb1" %>
                    <%= f.text_field :code,
                      placeholder: "S0001",
                      value: @wizard_form.code,
                      class: "gray input-reset br2 outline-0 ba b--black-20 pa2 db w-100" %>
                  </div>
                </div>
              </div>
            </div>

            <div class="mv4 flex flex-row">
              <div class="w-20">
                <span class="subtitle-2 ttc">Location Details</span>
              </div>

              <div class="fl w-80 flex flex-column">
                <div class="flex flex-row">
                  <div class="w-20 mr4">
                    <%= f.label "Location license #", class: "subtitle-2 ttc db mb1" %>
                    <%= f.text_field :site_license,
                      placeholder: "F0001",
                      rows: 1,
                      class: "ttu gray ba b--black-20 br2 outline-0 pa2 db w-100" %>
                  </div>

                  <div class="w-50">
                    <%= f.label "Address", class: "subtitle-2 ttc db mb1" %>
                    <%= f.text_field :address_address,
                      placeholder: "1011, 11th ave ne",
                      class: "ttu gray ba b--black-20 br2 outline-0 pa2 mb2 db w-100" %>
                  </div>
                </div>

                <div class="flex flex-row">
                  <div class="w-20 mr4">
                    <%= f.label "Zipcode", class: "subtitle-2 ttc db mb1" %>
                    <%= f.text_field :address_zipcode,
                      placeholder: "123000",
                      class: "gray ba b--black-20 br2 outline-0 br2 outline-0 pa2 db w-100" %>
                  </div>

                  <div class="w-50 flex flex-row">
                    <div class="w-50 mr4">
                      <%= f.label :address_state, class: "subtitle-2 ttc db mb1" %>
                      <%= f.text_field :address_state,
                        placeholder: "Carlifornia",
                        class: "gray ba b--black-20 br2 outline-0 pa2 db w-100" %>
                    </div>

                    <div class="w-50">
                      <%= f.label :address_country, class: "subtitle-2 ttc db mb1" %>
                      <%= f.text_field :address_country,
                        placeholder: "United States of America" ,
                        class: "gray ba b--black-20 br2 outline-0 pa2 db w-100" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="mb4 flex flex-row">
              <div class="w-20">
                <span class="subtitle-2 ttc">Contact Details</span>
              </div>

              <div class="fl w-70 flex flex-row">
                <div class="mr4 w-40">
                  <%= f.label "Phone Number", class: "subtitle-2 ttc db mb1" %>
                  <%= f.text_field :address_main_number, placeholder: "1234567", class: "gray ba b--black-20 br2 outline-0 pa2 db w-100" %>
                </div>

                <div class="w-40">
                  <%= f.label "Fax Number", class: "subtitle-2 ttc db mb1" %>
                  <%= f.text_field :address_fax_number, placeholder: "011 1234567" ,class: "gray ba b--black-20 br2 outline-0 pa2 db w-100" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="fl w-30 flex justify-end">
        <%= render "layouts/timeline" %>
      </div>
    </div>

    <%= render "form_buttons" %>
  </div>
</div>
