<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Home",root_path], 'Dashboard' %>
<% end %>

<div class="ma4 bg-white">
  <div>
    <h2 class="mt3 ml4 dib">Cultivation Schedules</h2>
    <div class="ba b--light-gray pa4">
      <table class="collapse ba br2 b--black-10 pv2 ph3 f6">
        <thead>
          <tr>
            <th class="w5 pv2 ph3 tl ttu">Strain</th>
            <th class="w4 tr ph3 ttu">Start Date</th>
            <th class="w4 tr ph3 ttu">Estimated Harvest Date</th>
          </tr>
        </thead>
        <tbody>
          <% @dashboard.cultivation_batches.each do |batch| %>
            <tr class="striped--light-gray dim">
              <td class="pv2 ph3 tl ttu">
                <%= link_to batch.batch_no, cultivation_batch_path(batch.id), class: "link pa1 dib" %>
              </td>
              <td class="tr pv2 ph3">
                <%= batch.start_date.try(:strftime, '%m/%d/%Y') %>
              </td>
              <td class="tr pv2 ph3">
                <%= batch.estimated_harvest_date.try(:strftime, '%m/%d/%Y') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div>
    <h2>Plant Inventory</h2>
    <div class="pa2 ba">
      Summary of Plant Inventory
    </div>
  </div>

  <div>
    <h2>Facility</h2>
    <div class="pa2 ba">
      Summary of occupancy of each Facility
    </div>
  </div>

  <div>
    <h2>Production Cost</h2>
    <div class="pa2 ba">
      Production Cost
    </div>
  </div>

  <div>
    <h2>Resource Management</h2>
    <div class="pa2 ba">
      Resource Management
    </div>
  </div>

  <div>
    <h2>Product Output</h2>
    <div class="pa2 ba">
      Final product output / sales product
    </div>
  </div>

  <div>
    <h2>Yield</h2>
    <div class="pa2 ba">
      Measure yield per square foot
    </div>
  </div>

  <div>
    <h2>Issues Reported</h2>
    <div class="pa2 ba">
      Dashboard of issues reported
    </div>
  </div>
</div>
