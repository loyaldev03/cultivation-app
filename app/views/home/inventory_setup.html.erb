<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Home",root_path], 'Inventory Setup' %>
<% end %>

<div class="pa4">
  <div class="flex flex-column justify-between bg-white">
  
    <div class="pt4 ph4">
      <div class="w-100 flex flex-column mb3">
        <!-- <h2 class="f2 tl pa0 ma0 fw4 dark-gray">Inventory Setup</h2> -->
        <p class="mt0 f3 fw4 dark-gray">
          Let's setup the necessary inventory for cultivation and sales.
        </p>
      </div>

      <div class="w-70 flex mb3 flex-column">
        <div class="flex flex-row justify-center items-center mb4">
          <div class="ba b--light-gray bw1 flex-none" style="height: 50px; width: 50px; border-radius: 50%">
            <%= image_tag "strain.svg" %>
          </div>
          <div class="flex-auto ph3 f6">
            <p class="ma0 pa0 mb2 fw6 dark-gray ttc">
              Register strain
            </p>
            <p class="ma0 pa0 fw4 gray lh-copy w-80">
              Register strains that are grown at your facility.
            </p>
          </div>
          
          <%= link_to 'Setup', inventory_strains_path(facility_id: current_default_facility&.id&.to_s), class: 'btn btn--secondary' %>
          
        </div>
        <div class="flex flex-row justify-center items-center mb4">
          <div class="ba b--light-gray bw1 flex-none" style="height: 50px; width: 50px; border-radius: 50%">
            <%= image_tag "active-plant.svg" %>
          </div>
          <div class="flex-auto ph3 f6">
            <p class="ma0 pa0 mb2 fw6 dark-gray ttc">
              Active plant inventory
            </p>
            <p class="ma0 pa0 fw4 gray lh-copy w-80">
              These are your plant inventories such as seeds, mother plants, clones, harvest yield and waste. Plant inventory requires unique IDs for legal compliance and traceability.
            </p>
          </div>
          <% if @strains_count <= 0 %>
            <%= link_to 'You need to register strain first.', '', class: 'flex-none black-20 link f6 fw6 pv2 br2 dim' %>
          <% else %>
            <%= link_to 'Setup', mothers_inventory_plants_path(facility_id: current_default_facility&.id&.to_s), class: 'btn btn--secondary' %>          
          <% end %>
        </div>

        <div class="flex flex-row justify-center items-center mb4">
          <div class="ba b--light-gray bw1 flex-none" style="height: 50px; width: 50px; border-radius: 50%">
            <%= image_tag "raw-materials.svg" %>
          </div>
          <div class="flex-auto ph3 f6">
            <p class="ma0 pa0 mb2 fw6 dark-gray ttc">
              Raw materials
            </p>
            <p class="ma0 pa0 fw4 gray lh-copy w-80">
              Consumables used for production (soil, lights, nutrients, etc.)
            </p>
          </div>
          
        <%= link_to 'Setup', nutrients_inventory_raw_materials_path(facility_id: current_default_facility&.id&.to_s), class: 'btn btn--secondary' %>
        </div>

        <div class="flex flex-row justify-center items-center mb4">
          <div class="ba b--light-gray bw1 flex-none" style="height: 50px; width: 50px; border-radius: 50%">
            <%= image_tag "sales-product.svg" %>
          </div>
          <div class="flex-auto ph3 f6">
            <p class="ma0 pa0 mb2 fw6 dark-gray ttc">
              Sales product
            </p>
            <p class="ma0 pa0 fw4 gray lh-copy w-80">
              Product items ready for Sale
            </p>
          </div>
          <%= link_to 'Setup', products_inventory_sales_products_path(facility_id: current_default_facility&.id&.to_s), class: 'btn btn--secondary' %>
          
        </div>


        <div class="flex flex-row justify-center items-center">
          <div class="ba b--light-gray bw1 flex-none" style="height: 50px; width: 50px; border-radius: 50%">
            <%= image_tag "non-sales-product.svg" %>
          </div>
          <div class="flex-auto ph3 f6">
            <p class="ma0 pa0 mb2 fw6 dark-gray ttc">
              Non sales items
            </p>
            <p class="ma0 pa0 fw4 gray lh-copy w-80">
              Any item that you want to keep track such as fixed assets or does not fit any category above (i.e. Office Supplies).
            </p>
          </div>

          
          <%= link_to 'Setup', inventory_non_sales_items_path(facility_id: current_default_facility&.id&.to_s), class: 'btn btn--secondary' %>
          
        </div>
      </div>
      
      <div class="w-70 bg-white pt4 pb4">
        <div class="dim flex flex-row items-center pointer">
          <i class="material-icons md-light-gray">keyboard_arrow_left</i>
          <%= link_to "Back", root_path, class: "db tr ttu link button--font light-grey" %>
        </div>  
      </div>
    </div>
  </div>
</div>
