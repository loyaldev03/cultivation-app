<% tabStyle = 'link bt-l bb-l br-l pv3 ph4 b--black-10 f6 fw6 gray hover-dark-gray hover-bg-light-gray bg-white' %>
<% selectedStyle = 'link bt-l br-l pv3 ph4 b--black-10 f6 fw6 dark-gray hover-bg-light-gray bg-white' %>
<div class="flex">
  <% if selected == 'mother' %>
    <div class="<%= selectedStyle %>">
      Mother Plants
    </div>
  <% else %>
    <%= link_to 'Mother Plants',
      mothers_inventory_plants_path, 
      class: tabStyle %>
  <% end %>

  <% if selected == 'cultivation_batch' %>
    <div class="<%= selectedStyle %>">
      Cultivation Batches
    </div>
  <% else %>
    <%= link_to 'Cultivation Batches', 
      cultivation_batches_inventory_plants_path, 
      class: tabStyle %>
  <% end %>

  <% if selected == 'clone' %>
    <div class="<%= selectedStyle %>">
      Clones / Plantings
    </div>
  <% else %>
    <%= link_to 'Clones/ Plantings',
      clones_inventory_plants_path, 
      class: tabStyle %>
  <% end %>

  <% if selected == 'veg' %>
    <div class="<%= selectedStyle %>">
      Vegs
    </div>
  <% else %>
    <%= link_to 'Veg',
      vegs_inventory_plants_path, 
      class: tabStyle %>
  <% end %>

  <% if selected == 'flower' %>
    <div class="<%= selectedStyle %>">
      Flowers
    </div>
  <% else %>
    <%= link_to 'Flower',
      flowers_inventory_plants_path, 
      class: tabStyle %>
  <% end %>

  <% if selected == 'harvest_batch' %>
    <div class="<%= selectedStyle %>">
      Harvest Batches
    </div>
  <% else %>
    <%= link_to 'Harvest Batches',
      harvest_batches_inventory_plants_path, 
      class: tabStyle %>
  <% end %>
</div>