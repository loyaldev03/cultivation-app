<% selected_style = 'scrollable-tab__tab scrollable-tab__tab--active' %>

<div class="scrollable-tab">    
  <% if selected == 'packages' %>
    <div class="<%= selected_style %>">
      Packages
    </div>
  <% else %>
    <%= link_to 'Packages',
      products_inventory_sales_products_path(facility_id: params[:facility_id]), 
      class: 'scrollable-tab__tab' %>
  <% end %>

  <% if selected == 'convert_products' %>
    <div class="<%= selected_style %>">
      Convert Products
    </div>
  <% else %>
    <%= link_to 'Convert Products',
      convert_products_inventory_sales_products_path(facility_id: params[:facility_id]), 
      class: 'scrollable-tab__tab' %>
  <% end %>

