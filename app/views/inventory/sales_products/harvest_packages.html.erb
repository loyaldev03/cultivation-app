<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Home",root_path], 
      ['Inventory Setup', inventory_setup_path], 
      'Sales Products',
      'Harvest Packages'
  %>
<% end %>

<div class="pa4">
  <div class="pa4 mb4 bg-white w-80">
    <h1 class="mt0 mb4 f3 fw4 dark-gray">
      Setup Harvest Package
    </h1>
    <p class="mb3 lh-copy f5 grey"> 
      Create trackable package from your harvest. The package can be used as a component of a new sales product or sold as-is. 
    </p>
  </div>

  <%= render partial: 'setup_navigation', locals: { selected: 'harvest_package' } %>
  
  <div class="flex flex-column">
    <%= react_component('inventory/sales_products/HarvestPackageSetupApp', {
      facility_strains: @facility_strains,
      harvest_batches: @harvest_batches,
      locations: @locations,
      sales_catalogue: @sales_catalogue,
      drawdown_uoms: @drawdown_uoms,
      facility_id: params[:facility_id]
    }) %>
    <div class="w-100 bg-white ph3 pt2 pb4">
      <div class="dim flex flex-row items-center pointer">
        <i class="material-icons md-light-gray">keyboard_arrow_left</i>
        <%= link_to "Back", inventory_setup_path, class: "db tr ttu link button--font light-grey" %>
      </div>  
    </div>
  </div>
</div>