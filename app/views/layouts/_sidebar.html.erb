<div id="sidebar" class="sidebar fixed min-vh-100 collapsed overflow-hidden" data-turbolinks="false">
  <%= link_to root_path, class: 'tc pv3 flex justify-center show-collapsed box--shadow-header outline-0', style: 'height: 50px' do %>
    <%= image_tag 'logo-small.svg' %>
  <% end %>

  <%= link_to root_path, class: 'tc pv3 hide box--shadow-header outline-0', style: 'height: 50px' do %>
    <%= image_tag 'logo.svg' %>
  <% end %>

  <% if user_signed_in? %>
    <div class="ma3 hide truncate tc">
      <div class="flex flex-row items-center">
        <%= image_tag 'blank-avatar.png', class: "dib mr3 br-100 cover", style: "height: 3rem" %>
        <div class="flex flex-column tl">
          <% if !current_user.first_name %>
            <span class="dark-grey subtitle-1"> <%= current_user.email %> </span>
          <% else %>
            <span class="dark-grey subtitle-1">
              <%= current_user.first_name %> <%= current_user.last_name %>
            </span>
          <% end %>

          <span class="grey overline ttc">Admin Head</span>
        </div>
      </div>
    </div>

    <div class="ma3 tc show-collapsed truncate">
      <%= image_tag 'blank-avatar.png',
          class: "dib br-100 cover",
          style: "height: 2.5rem; margin-top: 0.5rem;"
      %>
    </div>
  <% end %>

  <ul class="list pl0 hide">
    <%= link_to root_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center nav-ex ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">home</i>
        <span class="link subtitle-2-regular grey">Home</span>
      </li>
    <% end %>

    <%= link_to work_dashboard_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center nav-ex ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">dashboard</i>
        <span class="link subtitle-2-regular grey">Dashboard</span>
      </li>
    <% end %>

    <%= link_to inventory_setup_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center nav-ex ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">style</i>
        <span class="link subtitle-2-regular grey">Inventory</span>
      </li>
    <% end %>

    <li class="pv3 ph4 grow flex flex-row items-center nav-ex ba bt-0 bl-0 br-0 bb-0">
      <i class="material-icons md-16 grey mr3">account_balance_wallet</i>
      <span class="link subtitle-2-regular grey">Accounting</span>
    </li>

    <%= link_to new_cultivation_batch_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center nav-ex ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">view_quilt</i>
        <span class="link subtitle-2-regular grey">Cultivation</span>
      </li>
    <% end %>

    <li class="pv3 ph4 grow flex flex-row items-center nav-ex ba bt-0 bl-0 br-0 bb-0">
      <i class="material-icons md-16 grey mr3">track_changes</i>
      <span class="link subtitle-2-regular grey">Planning</span>
    </li>

    <li class="pv3 ph4 grow flex flex-row items-center nav-ex ba bt-0 bl-0 br-0 bb-0">
      <i class="material-icons md-16 grey mr3">assignment_ind</i>
      <span class="link subtitle-2-regular grey">Payroll</span>
    </li>

    <li class="pv3 ph4 grow flex flex-row items-center nav-ex ba bt-0 bl-0 br-0 bb-0">
      <i class="material-icons md-16 grey mr3">insert_chart</i>
      <span class="link subtitle-2-regular grey">Report</span>
    </li>

    <%= link_to settings_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center nav-ex ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">settings</i>
        <span class="link subtitle-2-regular grey">Settings</span>
      </li>
    <% end %>
  </ul>

  <ul class="list pl0 ma0 pa0 show-collapsed">
    <%= link_to root_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center tc nav-cl ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">home</i>
      </li>
    <% end %>

    <%= link_to work_dashboard_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center tc nav-cl ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">dashboard</i>
      </li>
    <% end %>

    <%= link_to inventory_setup_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center tc nav-cl ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">style</i>
      </li>
    <% end %>

    <li class="pv3 ph4 grow flex flex-row items-center tc nav-cl ba bt-0 bl-0 br-0 bb-0">
      <i class="material-icons md-16 grey mr3">account_balance_wallet</i>
    </li>

    <%= link_to new_cultivation_batch_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center tc nav-cl ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">view_quilt</i>
      </li>
    <% end %>

    <li class="pv3 ph4 grow flex flex-row items-center tc nav-cl ba bt-0 bl-0 br-0 bb-0">
      <i class="material-icons md-16 grey mr3">track_changes</i>
    </li>

    <li class="pv3 ph4 grow flex flex-row items-center tc nav-cl ba bt-0 bl-0 br-0 bb-0">
      <i class="material-icons md-16 grey mr3">assignment_ind</i>
    </li>

    <li class="pv3 ph4 grow flex flex-row items-center tc nav-cl ba bt-0 bl-0 br-0 bb-0">
      <i class="material-icons md-16 grey mr3">insert_chart</i>
    </li>

    <%= link_to settings_path, class: "link" do %>
      <li class="pv3 ph4 grow flex flex-row items-center tc nav-cl ba bt-0 bl-0 br-0 bb-0">
        <i class="material-icons md-16 grey mr3">settings</i>
      </li>
    <% end %>
  </ul>

  <div class="tc fixed flex dim align-center justify-center left-toggle-button">
    <a id="toggle-sidebar" href="#" class="link grey outline-0 w-100 self-center ">
      &#8677;
    </a>
  </div>
</div>
