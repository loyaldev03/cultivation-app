<div class="pa4">
  <div class="bg-white box--shadow pa4 fl w-100">
    <div class="fl w-100">
      <div class="dim flex flex-row items-center pointer">
        <i class="material-icons md-light-gray">keyboard_arrow_left</i>
        <a class="db tr ttu link button--font light-grey" href="<%= materials_items_path %>" data-turbolinks=false>Back</a>
      </div>
      <h5 class="tl pa0 ma0 h6--font dark-grey ttc mt2">Item Details</h1>
      <div class="w-50 mb3">

        <div class="flex mt4">
          <div class="w-40">
            <label>Name</label>
          </div>
          <div class="w-40">
            <div class="">
              <label><%= @record.name%></label>
            </div>
          </div>
        </div>


        <div class="flex mt3">
          <div class="w-40">
            <label>Description</label>
          </div>
          <div class="w-40">
            <div class="">
              <label></label>
            </div>
          </div>
        </div>

        <div class="flex mt5">
          <div class="w-40">
            <label>Total</label>
          </div>
          <div class="w-40">
            <div class="">
              <label><%= @record.item_transactions.sum(:quantity)%></label>
            </div>
          </div>
        </div>


      </div>
      <hr>
      <h5 class="tl pa0 ma0 h6--font dark-grey ttc">Transactions</h1>
      <div class="w-50 mb3">
        <table class="collapse ba b--light-grey box--br3 pv2 ph3 f6 mt1 w-100 mt4">
          <tbody>
            <tr class="striped--light-gray">
              <th class="pv2 ph3 subtitle-2 dark-grey tl ttu">Date</th>
              <th class="pv2 ph3 subtitle-2 dark-grey tl ttu">Quantity</th>
            </tr>
            
            <% @record.item_transactions.each do |transaction|%>
              <tr class="dim pointer">
                <td class="tl pv2 ph3 w5"><%= transaction.created_at.try(:strftime,"%d/%m/%Y %I:%M %p")%></td>
                <td class="tl pv2 ph3 w5"><%= transaction.quantity%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <a href="#0" 
          data-toggle-right="<%= new_materials_item_item_transaction_path(@record.id)%>" 
          class="link mt2 ba bw1 b b--blue blue pa2 ph3 br4 dib">
          + Add New
        </a>
      </div>

    </div>
  </div>
</div>