<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Settings", settings_path], ["Purchasing", purchasing_path], "Vendor Invoices" %>
<% end %>

<div class="pa4">
  <div class="flex flex-column justify-between bg-white box--shadow">
    <div class="pa4 min-h-600">
      <div class="fl w-100 flex flex-column width-100">
        <div class="flex justify-between">
          <div>
            <h5 class="tl pa0 ma0 h5--font dark-grey ttc">purchasing</h5>
            <p class="mt2 body-1 grey">Vendor Invoices
            </p>
          </div>
          <div class="dim flex flex-row items-center pointer">
            <i class="material-icons md-gray">keyboard_arrow_left</i>
            <%= link_to "Back to Setting", settings_path, class: "db tr ttu link button--font grey" %>
          </div>
        </div>
        <div class="flex flex-column mt3">
          <div class="fl w-100-m">
            <a 
              href="<%= purchasing_vendors_path(type: 'vendors') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'vendors' || params[:type].nil?%>"
            >
              Vendors
            </a>
            <a 
              href="<%= purchasing_purchase_orders_path(type: 'purchase_orders') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'purchase_orders'%>"
            >
              Purchase Orders
            </a>
            <a 
              href="<%= purchasing_vendor_invoices_path(type: 'vendor_invoices') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'vendor_invoices'%>"
            >
              Vendor Invoices
            </a>
            <div class="mt0 ba b--light-grey pa3">
              <%= render 'layouts/right_sidebar' %>
              <table class="collapse ba b--light-grey box--br3 pv2 ph3 f6 mt1 w-100 mb2">
                <thead>
                  <tr class="bg-light-gray">
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc">#</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc">Invoice No</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc">Invoice Date</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc">Status</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc">Terms In Days</th>
                  </tr>
                </thead>
                <tbody>
                  <% @records.try(:each_with_index) do |f, i| %>
                    <tr data-toggle-right="<%= purchasing_vendor_invoice_path(f.id)%>" class="pointer">
                      <td class="bb b--black-20 pv3 tc gray"><%= i+1 %></td>
                      <td class="bb b--black-20 pv3 tc"><%= blank(f.invoice_no) %></td>
                      <td class="bb b--black-20 pv3 tc"><%= blank(f.invoice_date.try(:strftime, '%d-%m-%Y')) %></td>
                      <td class="bb b--black-20 pv3 tc"><%= blank(f.status) %></td>
                      <td class="bb b--black-20 pv3 tc"><%= blank(f.terms_in_days) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :before_body_end do %>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      setupCollapsible();
    })
  </script>
<% end %>