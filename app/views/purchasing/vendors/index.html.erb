<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Settings", settings_path], ["Purchasing", purchasing_path], "Vendors" %>
<% end %>

<div class="pa4">
  <%= render 'toast'%>
  <div class="flex flex-column justify-between bg-white box--shadow">
    <div class="pa4 min-h-600">
      <div class="fl w-100 flex flex-column width-100">
        <div class="flex justify-between">
          <div>
            <h5 class="tl pa0 ma0 h5--font dark-grey ttc">purchasing</h5>
            <p class="mt2 body-1 grey">Vendors
            </p>
          </div>
          <div class="dim flex flex-row items-center pointer">
            <i class="material-icons md-gray">keyboard_arrow_left</i>
            <%= link_to "Back to Setting", settings_path, class: "db tr ttu link button--font grey" %>
          </div>
        </div>
        <div class="flex flex-column mt3">
          <div class="fl w-100-m">
            <a 
              href="<%= purchasing_vendors_path(type: 'vendors') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'vendors' || params[:type].nil?%>"
            >
              Vendors
            </a>
            <a 
              href="<%= purchasing_purchase_orders_path(type: 'purchase_orders') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'purchase_orders'%>"
            >
              Purchase Orders
            </a>
            <a 
              href="<%= purchasing_vendor_invoices_path(type: 'vendor_invoices') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'vendor_invoices'%>"
            >
              Vendor Invoices
            </a>
            <div class="mt0 ba b--light-grey pa3">
              <div class="w-100 tr mb3">
                <a href="#0" data-toggle-right="<%= new_purchasing_vendor_path %>" class='btn btn--primary'>
                  + Add New
                </a>
              </div>
              <div class="bg-white">
                <table class="std-table pv2 ph3 mt1 w-100">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Name</th>
                      <th>State License Num</th>
                      <th>State License Expiration Date</th>
                      <th>Location License Expiration Date</th>
                      <th>Location License Num</th>
                      <%# <th></th> %>
                    </tr>
                  </thead>

                  <tbody class="lh-copy">
                    <% @records.try(:each_with_index) do |f, i| %>
                      <tr class="pointer">
                        <td data-toggle-right="<%= edit_purchasing_vendor_path(f.id)%>" class="tl pv2 ph3 gray"><%= i+1 %></td>
                        <td data-toggle-right="<%= edit_purchasing_vendor_path(f.id)%>" class="tl pv2 ph3"><%= blank(f.name) %></td>
                        <td data-toggle-right="<%= edit_purchasing_vendor_path(f.id)%>" class="tl pv2 ph3"><%= blank(f.state_license_num) %></td>
                        <td data-toggle-right="<%= edit_purchasing_vendor_path(f.id)%>" class="tl pv2 ph3"><%= blank(f.state_license_expiration_date.try(:strftime, '%d-%m-%Y')) %></td>
                        <td data-toggle-right="<%= edit_purchasing_vendor_path(f.id)%>" class="tl pv2 ph3"><%= blank(f.location_license_expiration_date.try(:strftime, '%d-%m-%Y')) %></td>
                        <td data-toggle-right="<%= edit_purchasing_vendor_path(f.id)%>" class="tl pv2 ph3"><%= blank(f.location_license_num) %></td>
                        <%# <td class="tr pv2 ph3"> %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :before_body_end do %>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      setupCollapsible();
    })
  </script>
<% end %>

