<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Settings", settings_path], ["Purchasing", purchasing_path], "Vendors" %>
<% end %>

<%= render 'layouts/right_sidebar' %>

<div class="ph4 w-100 flex items-center pb3 pt3">
  <div class="w-70">
    <h2 class="pa0 ma0">Vendors</h2>
  </div>
  <div class="w-30 tr">
    <a href="#0"
       data-toggle-right="<%= new_purchasing_vendor_path %>"
       class="link ba bw1 b b--blue blue pa2 ph3 br4 dib"
    >
      + Add New
    </a>
  </div>
</div>

<div class="w-100 ph0">
  <table class="w-100 table collapse">
    <thead>
      <tr>
        <th class="f6 white pv3 tl pl4 pr3">#</th>
        <th class="f6 white pv3 tl w-20">Name</th>
      </tr>
    </thead>
    <tbody>
      <% @records.try(:each_with_index) do |f, i| %>
        <tr data-toggle-right="<%= edit_purchasing_vendor_path(f.id)%>" class="pointer">
          <td class="f6 tl pl4 pr3 gray"><%= i+1 %></td>
          <td class="f6 tl"><%= blank(f.name) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
