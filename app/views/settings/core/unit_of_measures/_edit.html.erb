<div class="ph4 pv3 bb b--light-grey">
  <h5 class="h6--font dark-grey ma0 ttc"><%= @record.name %></h5>
</div>

<%= simple_form_for :record, 
    url: settings_core_unit_of_measure_path(id: @record.id), 
    remote: true, 
    method: :patch, 
    html: { 
      class: 'h-100 flex flex-column justify-between'
    } do |f|
  %>

  <div class="pa4">
    <div class="mb3">
      <%= f.input :name, label: 'Name',
        label_html: { class: 'subtitle-2 db mb1 grey ttc' }, 
        input_html: { class: 'db w-70 pa2 body-1 grey ba b--light-grey box--br3 outline-0' } 
      %>
    </div>

    <div class="mb3">
      <%= f.input :unit, label: 'Unit',
        label_html: { class: 'subtitle-2 db mb1 grey ttc' }, 
        input_html: { class: 'db w-30 pa2 body-1 grey ba b--light-grey box--br3 outline-0' } 
      %>
    </div>

    <div class="mb3">
      <%= f.input :dimension, label: 'Dimension',
        label_html: { class: 'subtitle-2 db mb1 grey ttc' }, 
        readonly: true,
        input_html: { class: 'db w-70 pa2 body-1 grey ba b--light-grey box--br3 outline-0', rows: 5, value: 'custom' } 
      %>
    </div>

    <div class="">
      <span class="subtitle-2 grey">Is this a base unit?</span>
      <p class="grey caption mt2 w-90">
        If toggle is not selected, then that means that its not a base unit.
      </p>

      <div class="flex justify-end w-90">
        <%= f.check_box :is_base_unit,
          checked: @record.is_base_unit,
          class: "toggle toggle-default",
          data: { toggle: 'shelves_number_options' },
          id: 'record_is_base_unit'
        %>
        <label class="toggle-button" for="record_is_base_unit"></label>
      </div>
    </div>

    <div class="w-100 shelves_number_options" style="display: none" data-collapse="shelves_number_options">
      <div class="mt3">
        <%= f.label :base_unit, "Base Unit",
          class: "subtitle-2 db mb1 grey"
        %>
        <%= f.input :base_unit, label: 'Base UOM',
          label: false,
          as: :select,
          collection: @record.base_uom_select,
          value_method: :unit,
          label_html: { class: 'subtitle-2 db mb1 grey ttc' }, 
          input_html: { class: 'box--height db w-70 pa2 body-1 grey ba b--light-grey box--br3 outline-0', rows: 5 } 
        %>
      </div>
    </div>

    <div class="mb2">
      <%= f.input :conversion, label: 'Conversion',
        label_html: { class: 'subtitle-2 db mb1 grey ttc' }, 
        input_html: { class: 'box--height db w-70 pa2 body-1 grey ba b--light-grey box--br3 outline-0', rows: 5 } 
      %>
    </div>
  </div>

  <div class="bt b--light-grey pv3 ph4">
    <%= f.submit "Update", class: "fr pa3 bg-orange button--font white bn box--br3 ttu link dim pointer" %>
  </div>
<% end %>
