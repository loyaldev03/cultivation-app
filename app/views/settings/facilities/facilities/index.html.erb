<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Settings", settings_path], ["Facilities", all_settings_facility_facilities_path], "Facilities" %>
<% end %>

<div class="pa4">
  <div class="flex flex-column justify-between bg-white box--shadow">
    <div class="pa4 min-h-600">
      <div class="fl w-100 flex flex-column width-100">
        <div class="flex justify-between">
          <div>
            <h5 class="tl pa0 ma0 h5--font dark-grey ttc">Facilities Module</h5>
            <p class="mt2 body-1 grey">Facilities
            </p>
          </div>
          <div class="dim flex flex-row items-center pointer">
            <i class="material-icons md-gray">keyboard_arrow_left</i>
            <%= link_to "Back to Setting", settings_path, class: "db tr ttu link button--font grey" %>
          </div>
        </div>
        <div class="flex flex-column mt3">
          <div class="fl w-100-m">
            <a 
              href="<%= settings_facility_facilities_path(type: 'facilities') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'facilities' || params[:type].nil?%>"
            >
              Facilities
            </a>
            <a 
              href="<%= settings_facility_rooms_path(type: 'rooms') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'rooms'%>"
            >
              Rooms
            </a>
            <a 
              href="<%= settings_facility_sections_path(type: 'sections') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'sections'%>"
            >
              Sections
            </a>
            <a 
              href="<%= settings_facility_rows_path(type: 'rows') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'rows'%>"
            >
              Rows
            </a>
            <a 
              href="<%= settings_facility_shelves_path(type: 'shelves') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'shelves'%>"
            >
              Shelves
            </a>
            <div class="mt0 ba b--light-grey pa3">
              <%= render 'layouts/right_sidebar' %>
              <div class="tr mb3">
                <%= link_to "+ Setup New Facility", facility_setup_new_path, class: 'btn btn--primary' %>
              </div>

              <table class="collapse ba b--light-grey box--br3 pv2 ph3 f6 mt1 w-100 mb2">
                <thead>
                  <tr class="bg-light-gray">
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc">#</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc">Name</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc">ID</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc">Rooms</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey ttu tc"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @facilities.each_with_index do |f, i| %>
                    <tr>
                      <td class="bb b--black-20 pv3 tc gray"><%= i+1 %></td>
                      <td class="bb b--black-20 pv3 tc"><%= blank(f.name) %></td>
                      <td class="bb b--black-20 pv3 tc"><%= blank(f.code) %></td>
                      <td class="bb b--black-20 pv3 tc">
                        <%= f.rooms&.size %>
                      </td>
                      <td class="bb b--black-20 pv3 tr pr2">
                        <% status = if !f.is_complete 
                                    "Continue setup"
                                  elsif f.is_enabled
                                    "active"
                                  else
                                    "disabled"
                                  end
                        %>
                        <%= link_to "Configure", facility_setup_new_path(facility_id: f.id), class: "pv2 ph3 bg-orange white button--font bn box--br3 link dim pointer" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :before_body_end do %>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      setupCollapsible();
    })
  </script>
<% end %>
