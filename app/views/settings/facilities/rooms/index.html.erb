<% content_for :breadcrumb do %>
  <%= breadcrumbs ["Settings", settings_path], ["Facilities", all_settings_facility_facilities_path], "Rooms" %>
<% end %>

<div class="pa4">
  <div class="flex flex-column justify-between bg-white box--shadow">
    <div class="pa4 min-h-600">
      <div class="fl w-100 flex flex-column width-100">
        <div class="flex justify-between">
          <div>
            <h5 class="tl pa0 ma0 h5--font dark-grey ttc">Facilities Module</h5>
            <p class="mt2 body-1 grey">Rooms
            </p>
          </div>
          <div class="dim flex flex-row items-center pointer">
            <i class="material-icons md-gray">keyboard_arrow_left</i>
            <%= link_to "Back to Setting", settings_path, class: "db tr ttu link button--font grey" %>
          </div>
        </div>
        <div class="flex flex-column mt3">
          <div class="fl w-100-m">
            <a 
              href="<%= settings_facility_facilities_path(type: 'facilities') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'facilities' || params[:type].nil?%>"
            >
              Facilities
            </a>
            <a 
              href="<%= settings_facility_rooms_path(type: 'rooms') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'rooms'%>"
            >
              Rooms
            </a>
            <a 
              href="<%= settings_facility_sections_path(type: 'sections') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'sections'%>"
            >
              Sections
            </a>
            <a 
              href="<%= settings_facility_rows_path(type: 'rows') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'rows'%>"
            >
              Rows
            </a>
            <a 
              href="<%= settings_facility_shelves_path(type: 'shelves') %>" 
              class="tab <%= 'tab--active' if params[:type] == 'shelves'%>"
            >
              Shelves
            </a>
            <div class="mt0 ba b--light-grey pa3">

              <%= render 'layouts/right_sidebar' %>
              <div class="tr mb4">
                <a href="<%= facility_setup_rooms_info_path(facility_id: current_facility&.id.to_s) %>" class='btn btn--primary pr3'>
                  Create New Room
                </a>
              </div>

              <table class="collapse ba b--light-grey box--br3 pv2 ph3 f6 mt4 w-100 mb2">
                <thead>
                  <tr class="bg-light-gray">
                    <th class="pv2 ph3 subtitle-2 dark-grey tc">#</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc">Name</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc">Code</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc">Purpose</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc">Facility Name</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc">Plant Capacity</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc">Total Used</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc">Total Available</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc"># of Sections</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc"># of Rows</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc"># of Shelves</th>
                    <th class="pv2 ph3 subtitle-2 dark-grey tc"># of Tables</th>
                  </tr>
                </thead>

                <tbody>
                  <% @rooms.result.map.each_with_index do |f, i| %>
                    <tr data-toggle-right="<%= edit_settings_facility_room_path(f[:room_id])%>" class="dim pointer">
                      <td class="bb b--black-20 pv3 tc gray"><%= i+1%></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:room_name] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:room_code] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:purpose] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:facility_name] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:total_capacity] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:planned_capacity] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:available_capacity] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:section_count] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:row_count] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:shelf_count] %></td>
                      <td class="bb b--black-20 pv3 tc"><%= f[:tray_count] %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :before_body_end do %>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      setupCollapsible();
    })
  </script>
<% end %>


