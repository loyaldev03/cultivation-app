<% content_for :breadcrumb do %>
  Settings &gt; Facilities &gt; Rooms &gt; New
<% end %>

<div class="ph4 w-100 pb4">
  <h1 class="ma0 pa0 f3">Create room</h1>
</div>

<div class="ph4 w-50 pb4">
  <%= simple_form_for @room, url: settings_facility_rooms_path, html: { class: 'vertical-form' } do |f| %>
    <%= f.input :name, 
      label_html: { class: 'w-30 dib' }, 
      input_html: { class: 'w-70 pa2 ba b--silver outline-0' } 
    %>
    <%= f.input :code, 
      label_html: { class: 'w-30 dib' }, 
      input_html: { class: 'w-30 pa2 ba b--silver outline-0' } 
    %>
    <%= f.input :desc,
      as: :text,
      label_html: { class: 'w-30 dib' }, 
      input_html: { class: 'w-70 pa2 ba b--silver outline-0', rows: 5 } 
    %>
    <%= f.input :facility_id, as: :select, collection: Facility.all, 
      include_blank: false, 
      label_html: { class: 'w-30 dib' }, 
      input_html: { class: 'w-70 pa2 ba b--silver outline-0' } 
    %>
    <div class="pv3 tr w-100 flex items-center justify-end">
        <%= f.submit "Create", class: "pa2 ph4 ba b--blue blue bw1 br4" %>
        <%= link_to "Cancel", settings_facility_rooms_path, class: 'f6 blue link ml4' %>
    </div>
  <% end %>
</div>
