<%= simple_form_for room, url: path do |f| %>
  <div class="pv2">
    <%= f.input :code, 
    label_html: { class: 'w-30 dib mb2' }, 
    input_html: { class: 'w-70 pa2 ba b--silver outline-0' } 
    %>
  </div>
  <div class="pv2">
    <%= f.input :desc,
    as: :text,
    label_html: { class: 'w-30 dib mb2' }, 
    input_html: { class: 'w-70 pa2 ba b--silver outline-0', rows: 5 } 
    %>
  </div>
  <div class="pv2">
    <%= f.input :facility, as: :select, collection: Facility.all, 
    include_blank: false, 
    label_html: { class: 'w-30 dib mb2' }, 
    input_html: { class: 'w-70 pa2 ba b--silver outline-0' } 
  %>
  </div>
  <div class="pv3 tr w-100 flex items-center justify-end">
      <%= f.submit is_create ? "Create" : "Update", class: "pa2 ph4 ba b--blue blue bw1 br4" %>
      <%= link_to "Cancel", settings_facility_rooms_path, class: 'f6 blue link ml4' %>
  </div>
<% end %>